<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MYCHANNEL.ContentUploadActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="콘텐츠 추가"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_file_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="파일 업로드"
        android:textSize="16dp"
        android:textColor="#c19fc2"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#05ffffff"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_content_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/et_content_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/customedit"
        android:hint="콘텐츠 제목"
        android:padding="5dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/et_content_context"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/customedit"
        android:padding="5dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_content_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가하기"
        android:textSize="16dp"
        android:textColor="#c19fc2"
        android:textStyle="bold"
        android:background="#05ffffff"/>

</LinearLayout>