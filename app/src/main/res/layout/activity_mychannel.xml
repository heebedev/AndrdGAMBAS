<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MYCHANNEL.Activity_Mychannel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_mych_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mych_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채널닉네임"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_mych_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개설일 2020-10-10"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_mych_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채널설명"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_mych_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리"
                android:background="#00FF0000"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_mych_vali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운영중"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 리스트"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/btn_mych_add"
            android:layout_marginLeft="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="+"
            android:textSize="30dp"
            android:background="#00ff0000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_mych_prdList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>