<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="40dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FIREBASE.FirebaseUploadActivity">


    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#05ffffff"
        android:text="웹뷰 테스트"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/gambaslogo"/>

            <TextView
                android:id="@+id/tv_select_file"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_choose"
                android:text="파일 선택"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/customedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:hint="제목을 입력하세요."
                android:textColor="#000000"
                android:padding="10dp"
                android:background="@drawable/customedit"/>

            <EditText
                android:id="@+id/et_context"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:hint="내용을 입력하세요."
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:scrollHorizontally="false"
                android:padding="10dp"
                android:background="@drawable/customedit"/>

            <Button
                android:id="@+id/bt_upload"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@drawable/customedit"
                android:text="등록하기"
                android:textColor="#000000"
                android:textSize="16dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>